@model Pasucall.Models.tbl_Libro

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/StyleSheet.css" rel="stylesheet" />
<h2>Detalles del libro</h2>

<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label>Nombre Autor</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre_autor)
        </dd>

        <dt>
            <label>Nombre Libro</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre_libro)
        </dd>

        <dt>
            <label>Fecha Nacimiento</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fecha_nacimiento)
        </dd>

        <dt>
            <label>Fecha Publicacion</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fecha_publicacion)
        </dd>

    </dl>
</div>
<p>
    <a class="btn btn-outline-danger" onclick=@Html.ActionLink("Volver", "Index")
</p>
