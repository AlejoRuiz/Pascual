@model Pasucall.Models.tbl_Libro

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/StyleSheet.css" rel="stylesheet" />
<h2>Editar Libros</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.codigo)

        <div class="form-group">
            <label>Nombre Autor</label>
            <div class="txt">
                @Html.EditorFor(model => model.nombre_autor, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombre_autor, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Nombre Libro</label>
            <div class="txt">
                @Html.EditorFor(model => model.nombre_libro, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombre_libro, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Fecha Nacimiento</label>
            <div class="txt">
                @Html.EditorFor(model => model.fecha_nacimiento, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fecha_nacimiento, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Fecha Publicacion</label>
            <div class="txt">
                @Html.EditorFor(model => model.fecha_publicacion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fecha_publicacion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />          
        </div>
    </div>
}

<a class="btn btn-outline-danger" onclick=@Html.ActionLink("Cancelar", "Index") <p></p></a>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
