@model Pasucall.Models.tbl_Estudiante

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/StyleSheet.css" rel="stylesheet" />
<h2>Editar Estudiante</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.documento)

    <div class="form-group">
        <label>Nombre Completo</label>
        <div class="txt">
            @Html.EditorFor(model => model.nombre_completo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nombre_completo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label>Programa</label>
        <div class="txt">
            @Html.EditorFor(model => model.programa, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.programa, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-success" />
    </div>
</div>
}

    <a class="btn btn-outline-danger" onclick=@Html.ActionLink("Cancelar", "Index") <p></p></a>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
