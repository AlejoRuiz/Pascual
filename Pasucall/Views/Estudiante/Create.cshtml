@model Pasucall.Models.tbl_Estudiante

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/StyleSheet.css" rel="stylesheet" />
<h2>Agregar Estudiante</h2>

<br />
<br />

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label>Documento</label>
            <div class="txt">
                @Html.EditorFor(model => model.documento, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.documento, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label>Nombre Completo</label>
            <div class="txt">
                @Html.EditorFor(model => model.nombre_completo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombre_completo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Programa</label>
            <div class="txt">
                @Html.EditorFor(model => model.programa, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.programa, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="btnEst" id="Btt">
                <input type="submit" value="Agregar" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    <button type="button" class="btn btn-light" id="Btt">@Html.ActionLink("Cancelar", "Index")</button>   
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
